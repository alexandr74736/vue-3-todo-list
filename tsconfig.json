{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@ui": ["./src/shared/ui"],
      "@api": ["./src/shared/api"],
      "@request": ["./src/shared/api/model"],
      "@composables": ["./src/shared/composables"],
      "@entities": ["./src/entities"],
      "@features": ["./src/features"],
      "@widgets": ["./src/widgets"],
      "@pages": ["./src/pages"],
      "@styles": ["./src/app/styles"],
      "@icon": ["./src/shared/assets/icon"]
    },
    "types": ["node", "vitest/globals", "vite/client"],
    "moduleSuffixes": [".ts", ".tsx", ".js", ".jsx", ""]
  },
  "include": ["src/**/*", "src/types/**/*"],
  "exclude": ["node_modules", "dist"]
}